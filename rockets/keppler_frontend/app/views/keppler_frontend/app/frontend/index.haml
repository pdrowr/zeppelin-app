                                  .description-user.d-flex.justify-content-between
                                    %h4= count[:name]
                                    %p 10 min
                                  .list
                                    %dl
                                      %dt Productos
                                      %dd #{count[:products]}
                                      %dt Cuenta total
                                      %dd $#{count[:count]}
                        .order-footer.sticky-footer
