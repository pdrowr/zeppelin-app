            %label.label_custom{for:""} Cédula
            %input.form-control.input_custom{ placeholder: '',type:'number'}
          .form-group
            %label.label_custom{for:""} Dirección
            %input.form-control.input_custom{ placeholder: '',type:'number'}
          -# .form-group
          -#   %label.label_custom{for:""} Dirección
          -#   %input.form-control.input_custom{ placeholder: '',type:'number'}
          .float-right.mt-2
