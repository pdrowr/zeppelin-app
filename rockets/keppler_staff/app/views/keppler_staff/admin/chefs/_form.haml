= simple_form_for [:admin, :staff, @chef] do |f|
  .container
    .row
      .col-lg-2
        = link_to admin_staff_chefs_path, 'data-position': 'bottom', 'data-tooltip': t('keppler.actions.back') do
          .arrow-back.btn.btn-default
            %i.fa.fa-angle-left
            = t('keppler.actions.back')

    .row
      .col-lg-4
        .box.slice-box
          .box-header.with-border
            %h3.box-title= t('keppler.models.pluralize.chefs').humanize
            .box-tools.pull-right
              %a.btn.btn-box-tool{'data-widget': 'collapse', type: 'button'}
                %i.fa.fa-minus
          .box-body
            %table.table.table-bordered
              %tbody
                .form-padding
                  .col-xs-12
                    = f.input :avatar, as: :keppler_file # , max_size: 225
      .col-lg-8
        .box.slice-box
          .box-header.with-border
            %h3.box-title= t('keppler.models.pluralize.chefs').humanize
            .box-tools.pull-right
              %a.btn.btn-box-tool{'data-widget': 'collapse', type: 'button'}
                %i.fa.fa-minus
          .box-body
            %table.table.table-bordered
              %tbody
                .form-padding
                  .col-xs-12
                    = f.input :name, as: :string
                  .col-xs-12
                    = f.input :username, as: :string, label: 'Alias'
                  .col-xs-12
                    = f.input :email, as: :string
                  .col-xs-12
                    = f.input :code, as: :string, label: 'CÃ³digo'
                  .col-xs-12
                    .pull-right
                      = f.button :submit, t('keppler.actions.save'), name: '_save', class: 'btn-primary'
                      = f.button :submit, t('keppler.actions.save_and_add_another'), name: '_add_other'
